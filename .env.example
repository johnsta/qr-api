# Storage configuration
# Choose between "azure" or "minio"
STORAGE_TYPE=minio
CONTAINER_NAME=qrcodes

# Port configuration (default: 8000)
PORT=8000

# MinIO configuration (for local development)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false

# Azure Blob Storage Configuration (for production)
# For local development with Azure Storage Emulator:
# AZURE_STORAGE_CONNECTION_STRING=your_connection_string
# For production with Managed Identity:
# AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount

# Node.js environment (development/production)
NODE_ENV=development

# Application version
APP_VERSION=1.0.0
